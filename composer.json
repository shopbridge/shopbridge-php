{
    "name": "shopbridge/shopbridge-php",
    "description": "PHP SDK for Agentic Commerce Protocol",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "agentic commerce protocol",
        "acp",
        "ai",
        "sdk"
    ],
    "authors": [
        {
            "name": "ShopBridge.ai"
        }
    ],
    "require": {
        "php": "^7.4 || ^8.0",
        "psr/http-client": "^1.0",
        "psr/http-factory": "^1.0",
        "psr/http-message": "^1.0 || ^2.0"
    },
    "autoload": {
        "psr-4": {
            "ShopBridge\\": "src/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^9.6",
        "phpstan/phpstan": "^1.12"
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "lint": "vendor/bin/phpstan analyse src"
    }
}
